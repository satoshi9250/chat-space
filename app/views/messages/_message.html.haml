.chat-main__message__group
  .chat-main__message__group__list
    .chat-main__message__group__list__name
      = message.user.name
    .chat-main__message__group__list__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message__group__text-box
    - if message.content.present?
      %p.text 
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?