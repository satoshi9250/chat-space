.chat-side
  .chat-side__header
    .chat-side__header__box
      %h1.username
        = current_user.name
      %ul.iconlist
        %li.icon
          = link_to new_group_path do
            = icon('fas','edit')
        %li.icon
          = link_to edit_user_path(current_user) do
            = icon('fas','cog')
  .chat-side__group
    - current_user.groups.each do |group|
      .chat-side__group__box
        = link_to group_messages_path(group) do
          .chat-side__group__box__name
            = group.name
          .chat-side__group__box__message
            = group.show_last_message